@{
    ViewData["Title"] = "Job Page";
}

<br />
<h2>Estmate</h2>
<div class="row">
    <form class="form-control form-horizontal" asp-action="submit" method="post" style="border: none">
        <div class="form-group">
            <label for="inputText" class="col-sm-2 control-label">Start Url:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputText" placeholder="Url" name="uri">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Checked
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>
